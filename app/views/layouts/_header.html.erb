<header class="navbar navbar-fixed-top navbar-inverse"> 
    <%= javascript_include_tag "header", "data-track-turbo": "true", defer: true %>
    <div class="container">
        <%= link_to "sample app", root_path, id: "logo" %> 
        <nav>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed bar-btn" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span> 
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button> 
            </div>
            <div class=".bar-content">
                <ul class="nav navbar-nav navbar-right collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <li><%= link_to "Home", root_path %></li> 
                    <li><%= link_to "Help", help_path %></li> 
                    <% if logged_in? %>
                        <li><%= link_to "Users", users_path %></li>
                        <li class="dropdown show">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> 
                                Account <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu menu">
                                <li><%= link_to "Profile", user_path(current_user) %></li> 
                                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                                <li class="divider"></li>
                                <li>
                                    <%= link_to "Log out", logout_path, data:{ turbo_method: :delete}  %> 
                                </li>
                            </ul> 
                        </li>
                    <% else %>
                        <li><%= link_to "Log in", login_path %></li>
                    <% end %>
                </ul> 
            </div>
        </nav>
    </div> 
</header>
